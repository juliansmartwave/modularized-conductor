<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/ic_show_password" />
    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/ic_show_password" />
            <item android:left="4dp" android:right="4dp">
                <rotate android:fromDegrees="145">
                    <shape android:shape="line">
                        <stroke android:width="1dp" android:color="#A4AAB3"></stroke>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>